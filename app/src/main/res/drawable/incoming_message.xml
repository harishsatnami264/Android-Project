<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="30dp">
        <rotate
            android:fromDegrees="-60"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="#EF86AA" />

            </shape>
        </rotate>
    </item>
    <item android:left="16dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#EF86AA"

                android:endColor="#FDECF1"
                />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>