<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/first_page"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <Button
        android:id="@+id/listen_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textColor="#ffffff"

        android:text="Listen"
        />

    <Button
        android:id="@+id/discovarable_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textColor="#ffffff"

        android:text="Discovarable mode"
        />


    <ImageView
        android:id="@+id/on_off_img_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/button_design4"
        android:src="@drawable/ic_bluetooth_disabled_24"
        android:textAlignment="center" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="List Contacts"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/button_design1"
            android:textColor="#ffffff"
            android:id="@+id/list_contact_btn_id"/>


        <Button
            android:id="@+id/add_contact_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_design1"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:textColor="#ffffff"

            android:text="Add Contact"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/list_contact_lv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#33000000"
            android:layout_marginRight="3dp"/>

        <ListView
            android:id="@+id/add_new_contact_lv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            />
    </LinearLayout>
</LinearLayout>